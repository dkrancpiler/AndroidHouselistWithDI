<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_house"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="12dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EB3FF00">

    <TextView
        android:id="@+id/title_short_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/house_image"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="#66FFF200"
        android:textAlignment="center"></TextView>
    <ImageView
        android:paddingTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description_short_text"
        app:layout_constraintTop_toBottomOf="@id/title_short_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_image"
        android:scaleType="fitXY"
        android:paddingBottom="4dp"></ImageView>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/address_text"
        app:layout_constraintTop_toBottomOf="@id/house_image"
        android:id="@+id/description_short_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textAlignment="center"></TextView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/price_text"
        app:layout_constraintTop_toBottomOf="@id/description_short_text"
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textAlignment="center"></TextView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price_text"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textAlignment="center"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>